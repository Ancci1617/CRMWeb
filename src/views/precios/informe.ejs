<div class="container--informe">
  <table class="container--informe__table">
    <colgroup>
      <col span="3" class="table__group-1">
    </colgroup>
    <thead>
      <tr>
        <th>Actualizado:</th>
        <th>Art</th>
        <th>Descripcion</th>
        <th>Contado</th>
        <th>3 Cuotas</th>
        <th>6 Cuotas</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% productos.forEach(producto =>{  %>
      <tr class="nw row--producto <%= producto.ESVALIDO ? "" : "producto--invalido" %>">
        <td class="nw"><%= producto.LAST_UPDATED %></td>
        <td><%= producto.Art %></td>
        <td class="td--description"><%= producto.Producto %></td>
        <td><%= format(String(producto.CONTADO)) %></td>
        <td><%= format(producto["CUOTAS_3"]/3 + " = " + producto["CUOTAS_3"]) %></td>
        <td><%= format(producto["CUOTAS_6"]/6 + " = " + producto["CUOTAS_6"]) %></td>
        <td class="link">
          <span class="text--light-blue" onclick="(()=>{
          const producto = JSON.parse('<%= JSON.stringify(producto) %>')        
          toggleEditForm(producto)
        })()">Editar</span>

          <a class="link eliminar" href="/LP/eliminar/<%= producto.Art %>">Eliminar</a>
        </td>

      </tr>
      <% })%>
    </tbody>
  </table>
</div>