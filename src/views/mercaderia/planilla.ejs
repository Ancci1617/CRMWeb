<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blanco Gusmar | Cargas</title>
    <link rel="shortcut icon" href="/images/BGM.jpg" type="image/x-icon">
    <link rel="stylesheet" href="/css/navigation/navigation-bar.css">
    <link rel="stylesheet" href="/css/normalize.css">
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/CRM/General.css">
    <link rel="stylesheet" href="/css/CRM/interfaz.css">
    <link rel="stylesheet" href="/css/mercaderia/planilla.css">


</head>

<body>
    <%- include("../partials/navigation/navigation-bar",{username : user.Usuario}) %>

        <div class="page-container">
            <div class="btn-container">
                <div class="btn-ventas btn">Actualizar</div>
                <div class="btn-ventas btn">Cerrar planilla</div>
                <div class="btn-ventas btn">Abrir planilla vendedor</div>
            </div>



            <div class="planilla-container">
                <form action="/insertar_planilla" method="POST">
                <table class="tabla-datos tabla-carga">
                    <thead>
                        <tr>
                            <th>Cliente</th>
                            <th>Ficha</th>
                            <th>Ant</th>
                            <th>Estatus</th>
                            <th>Art</th>
                            <th>Vendedor</th>
                            <th>Control</th>
                        </tr>
                    </thead>
                    <tbody>
                      
                        <% for(let i = 0 ; i < planilla.ARTICULOS.length;i++){ %>
                        <tr>
                            <td><%= planilla.ARTICULOS[i].CTE %></td>
                            <td><%= planilla.ARTICULOS[i].FICHA %></td>
                            <td><%= planilla.ARTICULOS[i].ANT %></td>
                            <td><%= planilla.ARTICULOS[i].ESTATUS %></td>
                            <td><%= planilla.ARTICULOS[i].ART %></td> 
                            <td>
                                <select class="option-input">
                                    <option value="0" <%if(ARTICULOS_CONTROL.ARTICULOS[i].ESTADO == null){ %> <%= "selected" %> <%}%>></option>
                                    <option value="1" <%if(ARTICULOS_CONTROL.ARTICULOS[i].ESTADO == "Cargado"){ %> <%= "selected" %> <%}%>>Cargado</option>
                                    <option value="2" <%if(ARTICULOS_CONTROL.ARTICULOS[i].ESTADO == "No cargado"){ %> <%= "selected" %> <%}%>>No cargado</option>
                                </select>
                            </td>

                            <input type="" class="hidden" value="<%= ARTICULOS_CONTROL.ARTICULOS[i].ESTADO %>"/>
                            <!-- RENDERIZAR EN DISTINTO ORDEN EN FUNCION DE VENDEDOR / CONTROL-->
                            <td>Cargado</td>
                        </tr>
                        <% } %>

                    </tbody>

                </table>
            </form>
            </div>

            <div class="data-container">
                <span>Vendedor: Diego</span><br>
                <span>Camioneta: AB717</span><br>
                <span>Dia: 2023-03-07</span><br>
            </div>
        </div>
        <script src="/js/lib/asociar.input.js"></script>
        <script src="/js/mercaderia/planilla.js"></script>
    </body>

</html>







